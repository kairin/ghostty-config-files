{
  "name": "ghostty-config-files",
  "version": "1.0.0",
  "description": "A comprehensive terminal environment setup featuring Ghostty terminal emulator with 2025 performance optimizations, right-click context menu integration, plus integrated AI tools (Claude Code, Gemini CLI) and Ptyxis terminal via Flatpak",
  "type": "module",
  "main": "index.js",
  "directories": {
    "test": ".runners-local/tests",
    "doc": "documentations"
  },
  "scripts": {
    "docs:dev": "cd astro-website && npm run dev",
    "docs:build": "cd astro-website && npm run build",
    "docs:preview": "cd astro-website && npm run preview",
    "docs:check": "cd astro-website && npm run check",
    "docs:sync": "cd astro-website && npm run sync",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "echo 'Unit tests would run here'",
    "test:integration": "echo 'Integration tests would run here'",
    "test:validation": "./.runners-local/workflows/validate-modules.sh ./scripts",
    "health": "./.runners-local/workflows/gh-workflow-local.sh status",
    "health:full": "./.runners-local/workflows/gh-workflow-local.sh all",
    "health:context7": "./scripts/check_context7_health.sh",
    "health:github": "./scripts/check_github_mcp_health.sh",
    "health:updates": "./scripts/check_updates.sh",
    "ci": "./.runners-local/workflows/gh-workflow-local.sh all",
    "ci:validate": "./.runners-local/workflows/gh-workflow-local.sh validate",
    "ci:test": "./.runners-local/workflows/gh-workflow-local.sh test",
    "ci:build": "./.runners-local/workflows/gh-workflow-local.sh build",
    "ci:deploy": "./.runners-local/workflows/gh-workflow-local.sh deploy",
    "ci:status": "./.runners-local/workflows/gh-workflow-local.sh status",
    "ci:billing": "./.runners-local/workflows/gh-workflow-local.sh billing",
    "ci:pages": "./.runners-local/workflows/gh-workflow-local.sh pages",
    "pages:setup": "./.runners-local/workflows/gh-pages-setup.sh",
    "pages:verify": "./.runners-local/workflows/gh-pages-setup.sh --verify",
    "pages:build": "./.runners-local/workflows/gh-pages-setup.sh --build",
    "pages:configure": "./.runners-local/workflows/gh-pages-setup.sh --configure",
    "astro:build": "./.runners-local/workflows/astro-build-local.sh build",
    "astro:check": "./.runners-local/workflows/astro-build-local.sh check",
    "astro:validate": "./.runners-local/workflows/astro-build-local.sh validate",
    "astro:clean": "./.runners-local/workflows/astro-build-local.sh clean",
    "performance:baseline": "./.runners-local/workflows/performance-monitor.sh --baseline",
    "performance:test": "./.runners-local/workflows/performance-monitor.sh --test",
    "performance:compare": "./.runners-local/workflows/performance-monitor.sh --compare",
    "performance:report": "./.runners-local/workflows/performance-monitor.sh --weekly-report",
    "performance:dashboard": "./.runners-local/workflows/performance-dashboard.sh view",
    "benchmark": "./.runners-local/workflows/benchmark-runner.sh all",
    "lint": "./.runners-local/workflows/pre-commit-local.sh",
    "lint:modules": "./.runners-local/workflows/validate-modules.sh ./scripts",
    "lint:docs": "./.runners-local/workflows/documentation-sync-checker.sh",
    "git:status": "git status --short",
    "git:log": "git log --oneline -10",
    "git:branches": "git branch -a",
    "clean": "rm -rf node_modules docs/_astro docs/index.html",
    "clean:docs": "rm -rf docs/* && touch docs/.nojekyll",
    "clean:logs": "rm -rf /tmp/ghostty-start-logs/* ./.runners-local/logs/*",
    "install:all": "./start.sh",
    "update:check": "./scripts/check_updates.sh",
    "update:force": "./scripts/check_updates.sh --force",
    "update:config": "./scripts/check_updates.sh --config-only"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kairin/ghostty-config-files.git"
  },
  "keywords": [
    "ghostty",
    "terminal",
    "terminal-emulator",
    "configuration",
    "zsh",
    "ai-tools",
    "claude",
    "gemini"
  ],
  "author": "kairin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kairin/ghostty-config-files/issues"
  },
  "homepage": "https://github.com/kairin/ghostty-config-files#readme",
  "engines": {
    "node": ">=25.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "daisyui": "^5.5.5"
  }
}
