---
// Hero.astro - Main hero section for landing page
// Styled after Tailwind Plus commit template

interface Props {
  title?: string;
  tagline?: string;
}

const {
  title = 'Ghostty Config Files',
  tagline = 'Complete terminal environment setup for Ubuntu'
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<div class="relative z-10 mx-auto max-w-2xl px-6 lg:max-w-5xl lg:px-8">
  <div class="flex flex-col items-center text-center lg:items-start lg:text-left">
    <!-- Logo/Icon -->
    <div class="mb-6">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br from-sky-400 to-sky-600 shadow-lg shadow-sky-500/25">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    </div>

    <!-- Title -->
    <h1 class="font-display text-4xl/tight font-light text-white sm:text-5xl/tight lg:text-6xl/tight">
      {title.split(' ')[0]}{' '}
      <span class="text-sky-300">{title.split(' ').slice(1).join(' ')}</span>
    </h1>

    <!-- Tagline -->
    <p class="mt-4 text-lg/7 text-gray-300 max-w-xl">
      {tagline}
    </p>

    <!-- Feature Pills -->
    <div class="mt-8 flex flex-wrap justify-center lg:justify-start gap-2">
      <span class="badge badge-lg bg-sky-500/20 text-sky-300 border-sky-500/30">Ghostty v1.2.3+</span>
      <span class="badge badge-lg bg-emerald-500/20 text-emerald-300 border-emerald-500/30">ZSH + Oh My ZSH</span>
      <span class="badge badge-lg bg-violet-500/20 text-violet-300 border-violet-500/30">AI Tools</span>
      <span class="badge badge-lg bg-amber-500/20 text-amber-300 border-amber-500/30">Nerd Fonts</span>
    </div>

    <!-- Quick Install -->
    <div class="mt-8 w-full max-w-lg">
      <div class="mockup-code bg-gray-900/80 backdrop-blur text-sm shadow-xl">
        <pre data-prefix="$" class="text-gray-300"><code>git clone https://github.com/kairin/ghostty-config-files</code></pre>
        <pre data-prefix="$" class="text-gray-300"><code>cd ghostty-config-files && ./start.sh</code></pre>
      </div>
    </div>

    <!-- CTA Buttons -->
    <div class="mt-8 flex flex-wrap justify-center lg:justify-start gap-4">
      <a
        href="https://github.com/kairin/ghostty-config-files"
        target="_blank"
        rel="noopener"
        class="btn btn-primary btn-lg shadow-lg shadow-sky-500/25"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View on GitHub
      </a>
      <a
        href={`${base}docs/`}
        class="btn btn-outline btn-lg border-white/20 text-white hover:bg-white/10 hover:border-white/30"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        Documentation
      </a>
    </div>

    <!-- Footer Stats -->
    <div class="mt-12 flex items-center gap-x-6 text-sm text-gray-400">
      <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        <span>726 commits</span>
      </div>
      <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>~2 min install</span>
      </div>
      <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>MIT License</span>
      </div>
    </div>
  </div>
</div>
