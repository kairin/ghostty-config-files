---
// Main landing page - redesigned with commit template style
import '../styles/global.css';
import StarField from '../components/hero/StarField.astro';
import Glow from '../components/hero/Glow.astro';
import ParticleCanvas from '../components/hero/ParticleCanvas.astro';
import Hero from '../components/hero/Hero.astro';

const base = import.meta.env.BASE_URL;
---

<html lang="en" data-theme="dracula">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Complete terminal environment setup for Ubuntu with Ghostty, ZSH, AI tools, and modern CLI utilities." />
    <title>Ghostty Configuration Files</title>
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kairin.github.io/ghostty-config-files/" />
    <meta property="og:title" content="Ghostty Configuration Files" />
    <meta property="og:description" content="Complete terminal environment setup for Ubuntu with Ghostty, ZSH, AI tools, and modern CLI utilities." />
    <meta property="og:image" content="https://kairin.github.io/ghostty-config-files/og-main-v1764495479.png" />
    <meta property="og:site_name" content="Ghostty Configuration Files" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://kairin.github.io/ghostty-config-files/" />
    <meta name="twitter:title" content="Ghostty Configuration Files" />
    <meta name="twitter:description" content="Complete terminal environment setup for Ubuntu with Ghostty, ZSH, AI tools, and modern CLI utilities." />
    <meta name="twitter:image" content="https://kairin.github.io/ghostty-config-files/og-main-v1764495479.png" />
  </head>
  <body class="min-h-screen bg-transparent text-white overflow-x-hidden">
    
    <!-- Background Layers (bottom to top) -->

    <!-- Layer 1: Video Background (z-30) - 75% size, centered -->
    <div class="fixed inset-0 -z-30 flex items-center justify-center">
      <video
        autoplay
        muted
        loop
        playsinline
        class="w-[75%] h-[75%] object-contain opacity-90 md:opacity-60 rounded-lg"
      >
        <source src={`${base}video/font-install.webm`} type="video/webm" />
      </video>
    </div>

    <!-- Layer 2: Canvas Particles (z-25) -->
    <div class="fixed inset-0 -z-[25]">
      <ParticleCanvas />
    </div>

    <!-- Layer 3: Glow Effect (z-20) -->
    <div class="fixed inset-0 -z-20">
      <Glow class="bg-transparent" />
    </div>

    <!-- Layer 4: StarField Constellations (z-15) -->
    <div class="fixed inset-0 -z-[15]">
      <StarField class="top-0 right-0 lg:top-[-10%] lg:-right-20" />
    </div>

    <!-- Layer 5: Gradient Overlays (z-10) - desktop only -->
    <div class="fixed inset-0 -z-10 hidden md:block">
      <div class="absolute inset-x-0 top-0 h-24 bg-gradient-to-b from-gray-950/50 to-transparent"></div>
      <div class="absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-gray-950/50 to-transparent"></div>
    </div>

    <!-- Main Content -->
    <main class="relative min-h-screen flex items-start justify-end pt-8 pr-16">
      <Hero />
    </main>

    <!-- Footer -->
    <footer class="fixed bottom-0 w-full p-4 text-center text-gray-500 text-sm bg-transparent md:bg-gradient-to-t md:from-gray-950 md:via-gray-950/80 md:to-transparent">
      <div class="flex items-center justify-center gap-3">
        <p>Built with Astro + Tailwind + DaisyUI | MIT License</p>
        <!-- Theme Toggle -->
        <label class="swap swap-rotate btn btn-ghost btn-circle btn-sm bg-white/5 hover:bg-white/10">
          <input type="checkbox" id="theme-toggle" />
          <!-- Sun icon (shown in dark mode - click to switch to light) -->
          <svg class="swap-on fill-current w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/>
          </svg>
          <!-- Moon icon (shown in light mode - click to switch to dark) -->
          <svg class="swap-off fill-current w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Z"/>
          </svg>
        </label>
      </div>
    </footer>

    <!-- Theme Toggle Script -->
    <script>
      // Check for saved theme preference
      const savedTheme = localStorage.getItem('theme') || 'dracula';
      const htmlEl = document.documentElement;

      // Apply theme colors based on preference
      if (savedTheme === 'light') {
        htmlEl.classList.add('light-mode');
        document.body.classList.remove('text-white');
        document.body.classList.add('bg-gray-100', 'text-gray-900');
      }

      // Set checkbox state
      const toggle = document.getElementById('theme-toggle') as HTMLInputElement | null;
      if (toggle) {
        toggle.checked = savedTheme === 'light';
        toggle.addEventListener('change', () => {
          const isLight = toggle.checked;
          localStorage.setItem('theme', isLight ? 'light' : 'dracula');

          if (isLight) {
            htmlEl.classList.add('light-mode');
            document.body.classList.remove('text-white');
            document.body.classList.add('bg-gray-100', 'text-gray-900');
          } else {
            htmlEl.classList.remove('light-mode');
            document.body.classList.remove('bg-gray-100', 'text-gray-900');
            document.body.classList.add('text-white');
          }
        });
      }
    </script>
  </body>
</html>
