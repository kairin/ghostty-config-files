---
// Base layout component for all pages
// Provides consistent HTML structure, navigation, and styling

import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
  author?: string;
}

const { title, description, pubDate, author } = Astro.props;
const { base } = Astro.site ? { base: '/ghostty-config-files' } : { base: '' };
---

<!DOCTYPE html>
<html lang="en" data-theme="light" class="transition-colors duration-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />

    <title>{title} | Ghostty Configuration Files</title>
    {description && <meta name="description" content={description} />}

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-white dark:bg-slate-900 text-gray-900 dark:text-gray-100 transition-colors duration-200 cyber-bg">
    <!-- Modern Glass Morphism Navigation -->
    <nav class="fixed top-0 w-full backdrop-blur-xl bg-white/80 dark:bg-slate-900/80 shadow-lg border-b border-gray-200/50 dark:border-gray-700/50 z-50 transition-all duration-300">
      <div class="full-width-section">
        <div class="navbar">
          <div class="flex-1">
            <a href={`${base}/`} class="btn btn-ghost text-xl font-bold hover:text-blue-600 dark:hover:text-cyan-400 transition-all">
              <span class="hidden md:inline">Ghostty Config Files</span>
              <span class="md:hidden">Ghostty</span>
            </a>
          </div>
          <div class="flex-none gap-2">
            <ul class="menu menu-horizontal px-1 hidden lg:flex gap-4">
              <li><a href={`${base}/user-guide`} class="nav-link">User Guide</a></li>
              <li><a href={`${base}/ai-guidelines`} class="nav-link">AI Guidelines</a></li>
              <li><a href={`${base}/developer`} class="nav-link">Developer</a></li>
              <li>
                <a href="https://github.com/kairin/ghostty-config-files" target="_blank" rel="noopener noreferrer" class="nav-link">
                  GitHub
                </a>
              </li>
            </ul>
            <ThemeToggle />
          </div>
        </div>
      </div>
    </nav>

    <!-- Spacer for fixed nav -->
    <div class="h-20"></div>

    <!-- Main Content - Full Width -->
    <main class="w-full px-4 md:px-8 lg:px-12 xl:px-16 py-12">
      <!-- Article Header (if metadata provided) -->
      {(pubDate || author) && (
        <div class="mb-8 text-sm text-gray-600 dark:text-gray-400">
          {pubDate && <time datetime={pubDate.toISOString()}>
            {pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>}
          {author && <span> by {author}</span>}
        </div>
      )}

      <!-- Page Content - Full Width with Max Readable for Prose -->
      <article class="prose prose-lg w-full max-w-none text-lg leading-relaxed">
        <slot />
      </article>
    </main>

    <!-- Modern Glass Footer -->
    <footer class="footer footer-center bg-white/80 dark:bg-slate-900/80 backdrop-blur-xl text-gray-900 dark:text-gray-100 p-10 mt-16 border-t border-gray-200/50 dark:border-gray-700/50">
      <aside>
        <p class="font-bold text-xl mb-2">
          Ghostty Configuration Files
        </p>
        <p class="max-w-2xl text-gray-600 dark:text-gray-400">
          A comprehensive terminal environment setup featuring Ghostty terminal emulator<br />
          with 2025 performance optimizations, AI tools integration, and intelligent update management.
        </p>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-4">
          Built with Astro v5 + Tailwind CSS v4 + DaisyUI v5
        </p>
      </aside>
    </footer>

    <style is:global>
      /* Reference the global CSS to access DaisyUI classes */
      @reference "../styles/global.css";

      /* Prose styling for markdown content with dark mode support */
      .prose {
        @apply text-gray-900 dark:text-gray-100;
      }

      .prose h1 {
        @apply text-4xl md:text-5xl font-bold mb-6 mt-12 text-gray-900 dark:text-gray-100;
      }

      .prose h2 {
        @apply text-3xl md:text-4xl font-bold mb-4 mt-10 text-gray-900 dark:text-gray-100;
      }

      .prose h3 {
        @apply text-2xl md:text-3xl font-bold mb-3 mt-8 text-gray-900 dark:text-gray-100;
      }

      .prose h4 {
        @apply text-xl md:text-2xl font-bold mb-2 mt-6 text-gray-900 dark:text-gray-100;
      }

      .prose p {
        @apply mb-6 text-gray-900 dark:text-gray-100;
      }

      .prose ul, .prose ol {
        @apply mb-6 space-y-2;
      }

      .prose li {
        @apply text-gray-900 dark:text-gray-100;
      }

      .prose code {
        @apply bg-gray-50 dark:bg-slate-800 px-2 py-1 rounded text-sm font-mono border border-gray-200 dark:border-gray-700;
      }

      .prose pre {
        @apply bg-gray-50 dark:bg-slate-800 p-6 rounded-lg overflow-x-auto border border-gray-200 dark:border-gray-700 mb-6;
      }

      .prose pre code {
        @apply bg-transparent p-0 border-0;
      }

      .prose a {
        @apply text-blue-600 dark:text-blue-400 hover:text-purple-600 dark:hover:text-purple-400 underline decoration-2 underline-offset-2;
      }

      .prose blockquote {
        @apply border-l-4 border-blue-600 dark:border-blue-500 pl-6 py-2 italic text-gray-600 dark:text-gray-400 bg-gray-50 dark:bg-slate-800 rounded-r;
      }

      .prose strong {
        @apply font-bold text-gray-900 dark:text-gray-100;
      }

      .prose table {
        @apply w-full border-collapse mb-6;
      }

      .prose th {
        @apply bg-gray-50 dark:bg-slate-800 border border-gray-200 dark:border-gray-700 px-4 py-2 text-left font-bold;
      }

      .prose td {
        @apply border border-gray-200 dark:border-gray-700 px-4 py-2;
      }
    </style>
  </body>
</html>
