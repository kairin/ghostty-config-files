{
  "name": "Ghostty Configuration Files",
  "short_name": "Ghostty Config",
  "description": "Comprehensive terminal environment configuration with 2025 performance optimizations and constitutional compliance",
  "version": "2.0.0",
  "manifest_version": 3,
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#1f2937",
  "background_color": "#ffffff",
  "categories": [
    "productivity",
    "utilities",
    "developer-tools"
  ],
  "lang": "en-US",
  "dir": "ltr",
  "icons": [
    {
      "src": "/assets/images/ghostty-icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/assets/images/ghostty-icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/assets/images/ghostty-icon-vector.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/assets/images/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Desktop configuration interface"
    },
    {
      "src": "/assets/images/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile-responsive configuration"
    }
  ],
  "shortcuts": [
    {
      "name": "Configuration Editor",
      "short_name": "Config",
      "description": "Edit Ghostty configuration settings",
      "url": "/config.html",
      "icons": [
        {
          "src": "/assets/images/icon-config.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Theme Browser",
      "short_name": "Themes",
      "description": "Browse and select terminal themes",
      "url": "/themes.html",
      "icons": [
        {
          "src": "/assets/images/icon-themes.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Keybinding Editor",
      "short_name": "Keys",
      "description": "Customize keyboard shortcuts",
      "url": "/keybindings.html",
      "icons": [
        {
          "src": "/assets/images/icon-keys.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Export Configuration",
      "short_name": "Export",
      "description": "Export configuration files",
      "url": "/export.html",
      "icons": [
        {
          "src": "/assets/images/icon-export.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "linux",
      "url": "https://github.com/ghostty-org/ghostty"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "protocol_handlers": [
    {
      "protocol": "web+ghostty",
      "url": "/config?import=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/plain": [
          ".conf",
          ".config"
        ],
        "application/json": [
          ".json"
        ]
      },
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "config_file",
          "accept": [
            "text/plain",
            "application/json"
          ]
        }
      ]
    }
  },
  "permissions": [
    "offline",
    "local-storage"
  ],
  "offline_enabled": true,
  "constitutional_compliance": {
    "no_tracking": true,
    "no_analytics": true,
    "local_storage_only": true,
    "privacy_first": true,
    "performance_optimized": true,
    "accessibility_compliant": true,
    "open_source": true
  },
  "features": {
    "offline_support": true,
    "pwa_installable": true,
    "keyboard_shortcuts": true,
    "theme_switching": true,
    "configuration_export": true,
    "configuration_import": true,
    "real_time_preview": true,
    "accessibility_features": true,
    "mobile_responsive": true,
    "performance_monitoring": true
  },
  "technical_specifications": {
    "framework": "Astro.build v5.13.9",
    "styling": "Tailwind CSS v3.4.17",
    "javascript_bundle_size": "<100KB",
    "css_bundle_size": "<50KB",
    "lighthouse_score": ">95",
    "lcp_target": "<2.5s",
    "accessibility_level": "WCAG 2.1 AA",
    "browser_support": [
      "Chrome 90+",
      "Firefox 88+",
      "Safari 14+",
      "Edge 90+"
    ]
  },
  "update_policy": {
    "check_frequency": "daily",
    "auto_update": false,
    "user_consent_required": true,
    "rollback_supported": true
  }
}