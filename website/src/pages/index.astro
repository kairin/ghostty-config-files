---
// Homepage - Documentation site landing page
// Lists all content collections with descriptions

import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Fetch all collections
const aiGuidelines = await getCollection('ai-guidelines');
const userGuide = await getCollection('user-guide');
const developer = await getCollection('developer');

// Sort by title
const sortByTitle = (a: any, b: any) => a.data.title.localeCompare(b.data.title);
aiGuidelines.sort(sortByTitle);
userGuide.sort(sortByTitle);
developer.sort(sortByTitle);

const base = '/ghostty-config-files';
---

<BaseLayout
  title="Documentation Home"
  description="Comprehensive terminal environment setup featuring Ghostty terminal emulator with 2025 performance optimizations, AI tools integration, and intelligent update management."
>
  <!-- Hero Section -->
  <div class="hero min-h-[50vh] bg-gradient-to-br from-light-primary/10 to-light-secondary/10 dark:from-dark-primary/10 dark:to-dark-secondary/10 rounded-xl mb-12 border border-gray-200 dark:border-gray-700">
    <div class="hero-content text-center">
      <div class="max-w-4xl">
        <h1 class="text-6xl font-bold mb-6 text-gray-900 dark:text-gray-100">
          Ghostty Configuration Files
        </h1>
        <p class="text-2xl mb-8 text-gray-600 dark:text-gray-400 leading-relaxed">
          A comprehensive terminal environment setup featuring Ghostty terminal emulator
          with 2025 performance optimizations, right-click context menu integration,
          plus integrated AI tools (Claude Code, Gemini CLI) and intelligent update management.
        </p>
        <div class="flex gap-4 justify-center flex-wrap">
          <a href={`${base}/user-guide/installation`} class="btn btn-lg bg-blue-600 dark:bg-blue-500 hover:bg-purple-600 dark:hover:bg-purple-600 text-white border-0">
            Get Started
          </a>
          <a href="https://github.com/kairin/ghostty-config-files" target="_blank" rel="noopener noreferrer" class="btn btn-lg btn-outline border-2 border-blue-600 dark:border-blue-500 hover:bg-blue-600/10 dark:hover:bg-blue-600/10">
            View on GitHub
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Wins Section -->
  <div class="mb-16">
    <h2 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-gray-100">
      Recent Wins & Innovations
    </h2>
    <p class="text-center text-xl mb-12 text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
      Here's what makes this configuration exceptional and battle-tested in real-world development
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Node.js v25 Strategy -->
      <div class="card bg-gray-50 dark:bg-slate-800 border-2 border-green-600 dark:border-green-500 shadow-lg hover:shadow-xl transition-all">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-4">
            <div class="badge badge-lg bg-green-600 dark:bg-green-500 text-white border-0">NEW</div>
            <h3 class="card-title text-2xl text-gray-900 dark:text-gray-100">Node.js v25.2.0</h3>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Running latest current version (not LTS) for cutting-edge features. Astro.build documentation site benefits from newest Node.js innovations.
          </p>
          <div class="card-actions">
            <div class="badge badge-outline border-green-600 dark:border-green-500">Performance</div>
            <div class="badge badge-outline border-green-600 dark:border-green-500">Modern</div>
          </div>
        </div>
      </div>

      <!-- Constitutional Git Workflow -->
      <div class="card bg-gray-50 dark:bg-slate-800 border-2 border-blue-600 dark:border-blue-500 shadow-lg hover:shadow-xl transition-all">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-4">
            <div class="badge badge-lg bg-blue-600 dark:bg-blue-500 text-white border-0">CORE</div>
            <h3 class="card-title text-2xl text-gray-900 dark:text-gray-100">Git Branch Preservation</h3>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Constitutional requirement: NEVER delete branches. Every branch preserves valuable configuration history. Automatic merge to main without deletion.
          </p>
          <div class="card-actions">
            <div class="badge badge-outline border-blue-600 dark:border-blue-500">Safety</div>
            <div class="badge badge-outline border-blue-600 dark:border-blue-500">Data Preservation</div>
          </div>
        </div>
      </div>

      <!-- Zero-Cost CI/CD -->
      <div class="card bg-gray-50 dark:bg-slate-800 border-2 border-amber-600 dark:border-amber-500 shadow-lg hover:shadow-xl transition-all">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-4">
            <div class="badge badge-lg bg-amber-600 dark:bg-amber-500 text-white border-0">EFFICIENCY</div>
            <h3 class="card-title text-2xl text-gray-900 dark:text-gray-100">Local CI/CD</h3>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Complete workflow validation locally. Zero GitHub Actions costs. Full testing before deployment. Constitutional compliance enforced.
          </p>
          <div class="card-actions">
            <div class="badge badge-outline border-amber-600 dark:border-amber-500">Cost-Effective</div>
            <div class="badge badge-outline border-amber-600 dark:border-amber-500">Fast</div>
          </div>
        </div>
      </div>

      <!-- MCP Integrations -->
      <div class="card bg-gray-50 dark:bg-slate-800 border-2 border-purple-600 dark:border-purple-500 shadow-lg hover:shadow-xl transition-all">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-4">
            <div class="badge badge-lg bg-purple-600 dark:bg-purple-500 text-white border-0">AI</div>
            <h3 class="card-title text-2xl text-gray-900 dark:text-gray-100">MCP Integrations</h3>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Context7 MCP for up-to-date documentation. GitHub MCP for repository operations. Constitutional AI assistance with best practices validation.
          </p>
          <div class="card-actions">
            <div class="badge badge-outline border-purple-600 dark:border-purple-500">Context7</div>
            <div class="badge badge-outline border-purple-600 dark:border-purple-500">GitHub API</div>
          </div>
        </div>
      </div>

      <!-- Guardian Commands -->
      <div class="card bg-gray-50 dark:bg-slate-800 border-2 border-blue-600 dark:border-blue-500 shadow-lg hover:shadow-xl transition-all">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-4">
            <div class="badge badge-lg bg-blue-600 dark:bg-blue-500 text-white border-0">AUTOMATION</div>
            <h3 class="card-title text-2xl text-gray-900 dark:text-gray-100">Guardian Commands</h3>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            One-command workflows: /guardian-health, /guardian-deploy, /guardian-commit, /guardian-cleanup. Constitutional compliance automated.
          </p>
          <div class="card-actions">
            <div class="badge badge-outline border-blue-600 dark:border-blue-500">Slash Commands</div>
            <div class="badge badge-outline border-blue-600 dark:border-blue-500">Workflow</div>
          </div>
        </div>
      </div>

      <!-- Daily Updates -->
      <div class="card bg-gray-50 dark:bg-slate-800 border-2 border-green-600 dark:border-green-500 shadow-lg hover:shadow-xl transition-all">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-4">
            <div class="badge badge-lg bg-green-600 dark:bg-green-500 text-white border-0">SMART</div>
            <h3 class="card-title text-2xl text-gray-900 dark:text-gray-100">Automated Updates</h3>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            System-wide updates at 9:00 AM daily. Apt, npm, Oh My Zsh, Claude CLI, Gemini CLI. Passwordless with proper sudoers config. Full logging.
          </p>
          <div class="card-actions">
            <div class="badge badge-outline border-green-600 dark:border-green-500">Cron</div>
            <div class="badge badge-outline border-green-600 dark:border-green-500">Maintenance</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Documentation Sections -->
  <div class="mb-16">
    <h2 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-gray-100">
      Documentation Hub
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      <!-- User Guide Card -->
      <div class="card bg-gray-50 dark:bg-slate-800 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all">
        <div class="card-body">
          <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            User Guide
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Installation, configuration, and usage documentation for end users.
          </p>
          <div class="card-actions flex-col items-stretch gap-2">
            {userGuide.map((entry) => (
              <a href={`${base}/user-guide/${entry.id}`} class="btn btn-sm btn-outline border-gray-200 dark:border-gray-700 hover:bg-blue-600/10 dark:hover:bg-blue-600/10 hover:border-blue-600 dark:hover:border-blue-500 justify-start">
                {entry.data.title}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- AI Guidelines Card -->
      <div class="card bg-gray-50 dark:bg-slate-800 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all">
        <div class="card-body">
          <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            AI Guidelines
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Constitutional requirements and instructions for AI assistants (Claude, Gemini).
          </p>
          <div class="card-actions flex-col items-stretch gap-2">
            {aiGuidelines.map((entry) => (
              <a href={`${base}/ai-guidelines/${entry.id}`} class="btn btn-sm btn-outline border-gray-200 dark:border-gray-700 hover:bg-purple-600/10 dark:hover:bg-purple-600/10 hover:border-purple-600 dark:hover:border-purple-500 justify-start">
                {entry.data.title}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Developer Card -->
      <div class="card bg-gray-50 dark:bg-slate-800 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all">
        <div class="card-body">
          <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
            Developer
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Architecture, testing, and technical documentation for contributors.
          </p>
          <div class="card-actions flex-col items-stretch gap-2">
            {developer.map((entry) => (
              <a href={`${base}/developer/${entry.id}`} class="btn btn-sm btn-outline border-gray-200 dark:border-gray-700 hover:bg-amber-600/10 dark:hover:bg-dark-accent/10 hover:border-amber-600 dark:hover:border-amber-500 justify-start">
                {entry.data.title}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="divider my-12"></div>

  <h2 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-gray-100">Key Features</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
    <div class="card bg-white dark:bg-slate-900 border-2 border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 transition-all">
      <div class="card-body">
        <h3 class="card-title text-gray-900 dark:text-gray-100">2025 Performance Optimizations</h3>
        <p class="text-gray-600 dark:text-gray-400">Linux CGroup single-instance, enhanced shell integration, and memory management.</p>
      </div>
    </div>

    <div class="card bg-white dark:bg-slate-900 border-2 border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 transition-all">
      <div class="card-body">
        <h3 class="card-title text-gray-900 dark:text-gray-100">Context Menu Integration</h3>
        <p class="text-gray-600 dark:text-gray-400">Right-click "Open in Ghostty" in Nautilus file manager.</p>
      </div>
    </div>

    <div class="card bg-white dark:bg-slate-900 border-2 border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 transition-all">
      <div class="card-body">
        <h3 class="card-title text-gray-900 dark:text-gray-100">AI Tools Integration</h3>
        <p class="text-gray-600 dark:text-gray-400">Claude Code, Gemini CLI, and Context7 MCP for documentation synchronization.</p>
      </div>
    </div>

    <div class="card bg-white dark:bg-slate-900 border-2 border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 transition-all">
      <div class="card-body">
        <h3 class="card-title text-gray-900 dark:text-gray-100">Intelligent Updates</h3>
        <p class="text-gray-600 dark:text-gray-400">Smart detection and preservation of user customizations during updates.</p>
      </div>
    </div>

    <div class="card bg-white dark:bg-slate-900 border-2 border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 transition-all">
      <div class="card-body">
        <h3 class="card-title text-gray-900 dark:text-gray-100">Local CI/CD</h3>
        <p class="text-gray-600 dark:text-gray-400">Complete workflow execution without GitHub Actions costs.</p>
      </div>
    </div>

    <div class="card bg-white dark:bg-slate-900 border-2 border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 transition-all">
      <div class="card-body">
        <h3 class="card-title text-gray-900 dark:text-gray-100">Zero-Configuration Setup</h3>
        <p class="text-gray-600 dark:text-gray-400">One-command installation for fresh Ubuntu systems.</p>
      </div>
    </div>
  </div>

  <!-- Quick Links -->
  <div class="divider my-12"></div>

  <div class="alert bg-blue-600/10 dark:bg-blue-500/10 border-2 border-blue-600 dark:border-blue-500">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-8 h-8 text-blue-600 dark:text-blue-400">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <div>
      <h3 class="font-bold text-xl text-gray-900 dark:text-gray-100">Quick Start</h3>
      <div class="text-lg text-gray-600 dark:text-gray-400">
        For a fresh Ubuntu installation, clone the repository and run <code class="bg-gray-50 dark:bg-slate-800 px-3 py-1 rounded border border-gray-200 dark:border-gray-700 font-mono">./start.sh</code>
      </div>
    </div>
  </div>
</BaseLayout>
