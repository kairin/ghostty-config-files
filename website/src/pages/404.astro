---
// Custom 404 error page for GitHub Pages
// Provides helpful navigation when pages are not found

import BaseLayout from '../layouts/BaseLayout.astro';

const base = '/ghostty-config-files';
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
>
  <div class="hero min-h-[60vh]">
    <div class="hero-content text-center">
      <div class="max-w-2xl">
        <div class="text-9xl font-bold text-error mb-4">404</div>
        <h1 class="text-5xl font-bold mb-4">Page Not Found</h1>
        <p class="text-xl mb-8">
          The page you're looking for doesn't exist or has been moved.
        </p>

        <div class="flex flex-col gap-4 items-center">
          <a href={`${base}/`} class="btn btn-primary btn-lg">
            Go Home
          </a>

          <div class="divider">OR EXPLORE</div>

          <div class="flex gap-4 flex-wrap justify-center">
            <a href={`${base}/user-guide/installation`} class="btn btn-outline">
              User Guide
            </a>
            <a href={`${base}/ai-guidelines/core-principles`} class="btn btn-outline">
              AI Guidelines
            </a>
            <a href={`${base}/developer/architecture`} class="btn btn-outline">
              Developer Docs
            </a>
          </div>
        </div>

        <div class="mt-12">
          <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="text-left">
              <h3 class="font-bold">Looking for something specific?</h3>
              <div class="text-sm">
                Check out the <a href={`${base}/`} class="link">homepage</a> for a complete list of all documentation.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
