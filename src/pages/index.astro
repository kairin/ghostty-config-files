---
/**
 * Homepage
 *
 * Provides navigation hub with clear sections for users, developers, and AI assistants.
 * Meets SC-011 requirement: all sections accessible within 2 clicks.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';

const sections = [
  {
    title: 'User Guide',
    icon: 'üìò',
    description: 'Get started with installation, configuration, and usage of Ghostty terminal',
    href: '/ghostty-config-files/user-guide/installation',
    highlights: [
      'One-command installation',
      'Performance optimizations',
      'Context menu integration',
    ],
  },
  {
    title: 'Developer Documentation',
    icon: 'üë®‚Äçüíª',
    description: 'Architecture, contributing guidelines, and testing strategies',
    href: '/ghostty-config-files/developer/architecture',
    highlights: [
      'System architecture',
      'Contribution workflow',
      'Testing framework',
    ],
  },
  {
    title: 'AI Guidelines',
    icon: 'ü§ñ',
    description: 'Constitutional requirements and best practices for AI assistants',
    href: '/ghostty-config-files/ai-guidelines/core-principles',
    highlights: [
      'Core principles',
      'Git strategy',
      'CI/CD requirements',
    ],
  },
];
---

<BaseLayout
  title="Home"
  description="Ghostty Configuration Files - Terminal environment setup with AI integration"
>
  <Navigation />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold mb-4">
        üëª Ghostty Configuration Files
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        Comprehensive terminal environment setup featuring Ghostty terminal emulator with
        performance optimizations, context menu integration, and AI tool integration.
      </p>
    </div>

    <!-- Quick Start Cards -->
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      {sections.map(section => (
        <a
          href={section.href}
          class="block p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-shadow border border-gray-200 dark:border-gray-700"
        >
          <div class="text-4xl mb-4">{section.icon}</div>
          <h2 class="text-2xl font-bold mb-2">{section.title}</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            {section.description}
          </p>
          <ul class="space-y-2">
            {section.highlights.map(highlight => (
              <li class="flex items-start">
                <span class="text-blue-500 mr-2">‚úì</span>
                <span class="text-sm">{highlight}</span>
              </li>
            ))}
          </ul>
        </a>
      ))}
    </div>

    <!-- Features Overview -->
    <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-8">
      <h2 class="text-3xl font-bold mb-6 text-center">Key Features</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="flex items-start space-x-4">
          <span class="text-3xl">‚ö°</span>
          <div>
            <h3 class="font-semibold mb-1">Performance Optimized</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Latest Ghostty features with 2025 performance optimizations
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4">
          <span class="text-3xl">üñ±Ô∏è</span>
          <div>
            <h3 class="font-semibold mb-1">Context Menu Integration</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Right-click "Open in Ghostty" in file manager
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4">
          <span class="text-3xl">ü§ñ</span>
          <div>
            <h3 class="font-semibold mb-1">AI Tool Integration</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Claude Code and Gemini CLI seamlessly integrated
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4">
          <span class="text-3xl">üîÑ</span>
          <div>
            <h3 class="font-semibold mb-1">Smart Updates</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Intelligent update detection preserving customizations
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="mt-12 text-center">
      <h2 class="text-2xl font-bold mb-4">Quick Start</h2>
      <div class="flex justify-center space-x-4">
        <a
          href="/ghostty-config-files/user-guide/installation"
          class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        >
          Get Started ‚Üí
        </a>
        <a
          href="https://github.com/kairin/ghostty-config-files"
          class="px-6 py-3 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors"
        >
          View on GitHub
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
