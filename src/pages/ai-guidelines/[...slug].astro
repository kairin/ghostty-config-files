---
/**
 * AI Guidelines Dynamic Route
 *
 * Renders all AI guidelines pages from docs-source/ai-guidelines/
 * Uses content collections and DeveloperDocsLayout (similar technical nature).
 */

import { getCollection } from 'astro:content';
import DeveloperDocsLayout from '../../layouts/DeveloperDocsLayout.astro';
import Navigation from '../../components/Navigation.astro';

export async function getStaticPaths() {
  const aiGuidelinesEntries = await getCollection('ai-guidelines');

  return aiGuidelinesEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// AI guidelines use tech stack field for target audience
const techStack = entry.data.targetAudience
  ? [`Target: ${entry.data.targetAudience}`]
  : [];

if (entry.data.constitutional) {
  techStack.push('Constitutional Requirement');
}
---

<DeveloperDocsLayout
  title={entry.data.title}
  description={entry.data.description}
  author={entry.data.author}
  techStack={techStack}
>
  <Navigation />
  <Content />
</DeveloperDocsLayout>
