---
/**
 * @component PerformanceComparison
 * @summary A timeline component comparing performance metrics across different development phases.
 * @description This component visually represents the evolution of performance metrics through various stages of a project, from a baseline to performance mastery. It uses a hardcoded dataset and does not accept any props.
 */
export interface PhaseComparison {
  phase: string;
  description: string;
  metrics: {
    name: string;
    value: number;
    unit: string;
    status: 'excellent' | 'good' | 'warning' | 'critical';
  }[];
  achievements: string[];
}

const phaseData: PhaseComparison[] = [
  {
    phase: "Baseline (Pre-Phase 1)",
    description: "Terminal performance before optimizations",
    metrics: [
      { name: "Shell Startup", value: 200, unit: "ms", status: "critical" },
      { name: "Memory Usage", value: 180, unit: "MB", status: "warning" },
      { name: "Command Lookup", value: 150, unit: "ms", status: "critical" },
      { name: "Cache Hit Rate", value: 0, unit: "%", status: "critical" }
    ],
    achievements: ["Basic terminal functionality", "Standard Oh My ZSH setup"]
  },
  {
    phase: "Phase 1: Foundation",
    description: "AI Integration & Basic Optimizations",
    metrics: [
      { name: "Shell Startup", value: 120, unit: "ms", status: "warning" },
      { name: "Memory Usage", value: 145, unit: "MB", status: "good" },
      { name: "Command Lookup", value: 80, unit: "ms", status: "good" },
      { name: "Cache Hit Rate", value: 35, unit: "%", status: "warning" }
    ],
    achievements: [
      "Claude Code CLI integration",
      "Gemini CLI integration",
      "Context awareness engine",
      "Installation tracking system"
    ]
  },
  {
    phase: "Phase 2: Theming",
    description: "Advanced Theme Systems & Environment Detection",
    metrics: [
      { name: "Shell Startup", value: 80, unit: "ms", status: "good" },
      { name: "Memory Usage", value: 120, unit: "MB", status: "good" },
      { name: "Command Lookup", value: 45, unit: "ms", status: "excellent" },
      { name: "Cache Hit Rate", value: 68, unit: "%", status: "good" }
    ],
    achievements: [
      "Powerlevel10k installation & optimization",
      "Starship configuration with performance tuning",
      "Adaptive theme switching system",
      "Environment detection (<50ms performance)"
    ]
  },
  {
    phase: "Phase 3: Performance Mastery",
    description: "Constitutional Performance Excellence",
    metrics: [
      { name: "Shell Startup", value: 42, unit: "ms", status: "excellent" },
      { name: "Memory Usage", value: 95, unit: "MB", status: "excellent" },
      { name: "Command Lookup", value: 6, unit: "ms", status: "excellent" },
      { name: "Cache Hit Rate", value: 94, unit: "%", status: "excellent" }
    ],
    achievements: [
      "ZSH completion caching (<10ms)",
      "Plugin compilation optimization",
      "Theme precompilation system",
      "Cache effectiveness monitoring",
      "Constitutional compliance achieved"
    ]
  }
];

const getStatusColor = (status: string) => {
  switch (status) {
    case 'excellent': return 'text-green-600 dark:text-green-400 bg-green-100 dark:bg-green-900';
    case 'good': return 'text-blue-600 dark:text-blue-400 bg-blue-100 dark:bg-blue-900';
    case 'warning': return 'text-yellow-600 dark:text-yellow-400 bg-yellow-100 dark:bg-yellow-900';
    case 'critical': return 'text-red-600 dark:text-red-400 bg-red-100 dark:bg-red-900';
    default: return 'text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-900';
  }
};

const getStatusIcon = (status: string) => {
  switch (status) {
    case 'excellent': return '✓';
    case 'good': return '◐';
    case 'warning': return '⚠';
    case 'critical': return '✗';
    default: return '?';
  }
};
---

<div class="w-full space-y-8">
  <!-- Header Section -->
  <div class="text-center space-y-4">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
      Performance Evolution Journey
    </h2>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
      Tracking constitutional performance improvements through Feature 002: Advanced Terminal Productivity Suite
    </p>
    <div class="flex justify-center">
      <div class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-lg font-medium shadow-lg">
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"></path>
        </svg>
        Constitutional Excellence Achieved
      </div>
    </div>
  </div>

  <!-- Phase Comparison Timeline -->
  <div class="relative">
    <!-- Timeline Line -->
    <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-red-500 via-yellow-500 via-blue-500 to-green-500"></div>

    <div class="space-y-8">
      {phaseData.map((phase, index) => (
        <div class="relative flex items-start space-x-6 group">
          <!-- Timeline Dot -->
          <div class={`relative z-10 flex items-center justify-center w-16 h-16 rounded-full border-4 border-white dark:border-gray-950 shadow-lg ${
            index === 0 ? 'bg-red-500' :
            index === 1 ? 'bg-yellow-500' :
            index === 2 ? 'bg-blue-500' : 'bg-green-500'
          }`}>
            <span class="text-white font-bold">{index === 0 ? 'B' : `P${index}`}</span>
          </div>

          <!-- Phase Content Card -->
          <div class="flex-1 bg-white dark:bg-gray-950 border border-gray-200 dark:border-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 group-hover:scale-[1.02]">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">
                {phase.phase}
              </h3>
              <div class="text-sm text-gray-500 dark:text-gray-400">
                {index === 3 ? 'CURRENT' : `${index === 0 ? 'BASELINE' : 'COMPLETE'}`}
              </div>
            </div>

            <p class="text-gray-600 dark:text-gray-400 mb-6">
              {phase.description}
            </p>

            <!-- Metrics Grid -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
              {phase.metrics.map((metric) => (
                <div class={`p-3 rounded-lg border ${getStatusColor(metric.status)}`}>
                  <div class="flex items-center justify-between mb-1">
                    <span class="text-xs font-medium">{metric.name}</span>
                    <span class="text-xs">{getStatusIcon(metric.status)}</span>
                  </div>
                  <div class="text-lg font-bold">
                    {metric.value}{metric.unit}
                  </div>
                </div>
              ))}
            </div>

            <!-- Achievements -->
            <div>
              <h4 class="text-sm font-semibold text-gray-900 dark:text-gray-100 mb-2">
                Key Achievements:
              </h4>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                {phase.achievements.map((achievement) => (
                  <div class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
                    <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span>{achievement}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Performance Metrics Summary -->
  <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 rounded-xl p-8">
    <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6 text-center">
      Constitutional Performance Achievements
    </h3>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <div class="text-center space-y-2">
        <div class="text-3xl font-bold text-green-600 dark:text-green-400">
          79%
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          Startup Speed<br/>Improvement
        </div>
      </div>
      <div class="text-center space-y-2">
        <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">
          96%
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          Command Lookup<br/>Optimization
        </div>
      </div>
      <div class="text-center space-y-2">
        <div class="text-3xl font-bold text-purple-600 dark:text-purple-400">
          47%
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          Memory Usage<br/>Reduction
        </div>
      </div>
      <div class="text-center space-y-2">
        <div class="text-3xl font-bold text-orange-600 dark:text-orange-400">
          100%
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          Constitutional<br/>Compliance
        </div>
      </div>
    </div>
  </div>

  <!-- Technical Implementation Showcase -->
  <div class="bg-white dark:bg-gray-950 border border-gray-200 dark:border-gray-800 rounded-xl p-6">
    <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">
      Advanced Optimization Techniques Implemented
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
        <h4 class="font-semibold text-blue-900 dark:text-blue-100 mb-2">
          Intelligent Caching
        </h4>
        <p class="text-sm text-blue-700 dark:text-blue-300">
          ZSH completion caching with constitutional &lt;10ms performance guarantee
        </p>
      </div>

      <div class="p-4 bg-green-50 dark:bg-green-900/20 rounded-lg border border-green-200 dark:border-green-800">
        <h4 class="font-semibold text-green-900 dark:text-green-100 mb-2">
          Precompilation
        </h4>
        <p class="text-sm text-green-700 dark:text-green-300">
          Theme and plugin precompilation for instant loading
        </p>
      </div>

      <div class="p-4 bg-purple-50 dark:bg-purple-900/20 rounded-lg border border-purple-200 dark:border-purple-800">
        <h4 class="font-semibold text-purple-900 dark:text-purple-100 mb-2">
          Cache Monitoring
        </h4>
        <p class="text-sm text-purple-700 dark:text-purple-300">
          Real-time effectiveness monitoring with automatic optimization
        </p>
      </div>
    </div>
  </div>

  <!-- Powered by shadcn/ui Badge -->
  <div class="flex justify-center pt-4">
    <a
      href="https://ui.shadcn.com"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center px-4 py-2 bg-black dark:bg-white text-white dark:text-black rounded-full text-sm font-medium hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors"
    >
      <svg class="w-4 h-4 mr-2" viewBox="0 0 256 256" fill="currentColor">
        <path d="m208 128-80 80-80-80 80-80Z"/>
      </svg>
      Built with shadcn/ui
    </a>
  </div>
</div>

<style>
  /* Smooth animations for timeline */
  .group:hover .timeline-dot {
    transform: scale(1.1);
  }

  /* Gradient text animation */
  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .gradient-text {
    background: linear-gradient(45deg, #667eea, #764ba2, #f093fb, #f5576c);
    background-size: 300% 300%;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    animation: gradient-shift 4s ease infinite;
  }
</style>