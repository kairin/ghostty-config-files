---
export interface Props {
  class?: string;
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
}

const {
  class: className = '',
  as: Tag = 'h3',
  ...props
} = Astro.props;

const titleClasses = `text-2xl font-semibold leading-none tracking-tight ${className}`.trim();
---

<Tag class={titleClasses} {...props}>
  <slot />
</Tag>