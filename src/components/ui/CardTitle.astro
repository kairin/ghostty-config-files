---
/**
 * @component CardTitle
 * @summary A component for the title text within a `CardHeader`.
 * @description This component is designed to be used inside a `CardHeader` to display the title of the card. It allows for semantic heading levels to be specified via the `as` prop.
 * @property {string} [class] - Additional CSS classes to apply to the heading element.
 * @property {'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'} [as='h3'] - The HTML heading element to use for the title, allowing for semantic document structure.
 */
export interface Props {
  class?: string;
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
}

const {
  class: className = '',
  as: Tag = 'h3',
  ...props
} = Astro.props;

const titleClasses = `text-2xl font-semibold leading-none tracking-tight ${className}`.trim();
---

<Tag class={titleClasses} {...props}>
  <slot />
</Tag>