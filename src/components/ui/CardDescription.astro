---
/**
 * @component CardDescription
 * @summary A component for the description text within a `CardHeader`.
 * @description This component is intended to be used inside a `CardHeader` to provide a description or subtitle for the card. It is styled with a muted text color and appropriate font size.
 * @property {string} [class] - Additional CSS classes to apply to the paragraph element.
 */
export interface Props {
  class?: string;
}

const { class: className = '', ...props } = Astro.props;

const descriptionClasses = `text-sm text-muted-foreground ${className}`.trim();
---

<p class={descriptionClasses} {...props}>
  <slot />
</p>