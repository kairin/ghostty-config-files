---
/**
 * Base Layout Component
 *
 * Provides the foundational HTML structure for all pages in the documentation site.
 * Includes meta tags, stylesheets, and common structural elements.
 *
 * Props:
 * - title: Page title (required)
 * - description: Meta description (required)
 * - author: Content author (optional)
 */

export interface Props {
  title: string;
  description: string;
  author?: string;
}

const { title, description, author } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    {author && <meta name="author" content={author} />}
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL for SEO -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/ghostty-config-files/favicon.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <title>{title} | Ghostty Configuration Files</title>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <slot />
  </body>
</html>

<style is:global>
  /* Base typography and spacing */
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    line-height: 1.6;
  }

  /* Code blocks styling */
  pre {
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  code {
    font-family: 'Courier New', Courier, monospace;
  }

  /* Link styling */
  a {
    color: #3b82f6;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
