---
/**
 * Developer Documentation Layout
 *
 * Layout for developer-facing documentation (architecture, contributing, testing).
 * Provides technical styling with code-friendly formatting and enhanced navigation.
 *
 * Features:
 * - Monospace-friendly typography
 * - Enhanced code block styling
 * - Technical sidebar navigation
 * - Quick links to related technical resources
 */

import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  author?: string;
  techStack?: string[];
}

const { title, description, author, techStack } = Astro.props;
---

<BaseLayout title={title} description={description} author={author}>
  <div class="flex min-h-screen">
    <!-- Sidebar Navigation -->
    <aside class="w-64 bg-gray-900 dark:bg-black text-gray-100 border-r border-gray-800 fixed h-full overflow-y-auto">
      <div class="p-6">
        <h2 class="text-xl font-bold mb-4">
          <a href="/ghostty-config-files/developer" class="hover:text-green-400">
            üë®‚Äçüíª Developer
          </a>
        </h2>
        <nav class="space-y-2">
          <a href="/ghostty-config-files/developer/architecture" class="block px-3 py-2 rounded hover:bg-gray-800">
            Architecture
          </a>
          <a href="/ghostty-config-files/developer/contributing" class="block px-3 py-2 rounded hover:bg-gray-800">
            Contributing
          </a>
          <a href="/ghostty-config-files/developer/testing" class="block px-3 py-2 rounded hover:bg-gray-800">
            Testing
          </a>
        </nav>

        {techStack && techStack.length > 0 && (
          <>
            <hr class="my-6 border-gray-800" />
            <h3 class="text-sm font-semibold mb-2 text-gray-400">
              Tech Stack
            </h3>
            <div class="flex flex-wrap gap-2">
              {techStack.map(tech => (
                <span class="text-xs bg-gray-800 px-2 py-1 rounded">
                  {tech}
                </span>
              ))}
            </div>
          </>
        )}

        <hr class="my-6 border-gray-800" />

        <h3 class="text-sm font-semibold mb-2 text-gray-400">
          Other Sections
        </h3>
        <nav class="space-y-2 text-sm">
          <a href="/ghostty-config-files/user-guide" class="block px-3 py-2 rounded hover:bg-gray-800">
            üìò User Guide
          </a>
          <a href="/ghostty-config-files/ai-guidelines" class="block px-3 py-2 rounded hover:bg-gray-800">
            ü§ñ AI Guidelines
          </a>
        </nav>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-64 p-8 bg-gray-950 text-gray-100">
      <article class="max-w-4xl mx-auto prose prose-lg prose-invert">
        <h1>{title}</h1>
        <slot />
      </article>
    </main>
  </div>
</BaseLayout>

<style>
  /* Developer-specific prose styling */
  .prose {
    max-width: 75ch; /* Wider for code examples */
  }

  .prose h1 {
    @apply text-4xl font-bold mb-4 text-green-400;
  }

  .prose h2 {
    @apply text-3xl font-semibold mt-8 mb-4 text-green-300;
  }

  .prose h3 {
    @apply text-2xl font-semibold mt-6 mb-3 text-green-200;
  }

  .prose code {
    @apply bg-gray-900 px-1.5 py-0.5 rounded text-sm font-mono text-green-400;
  }

  .prose pre {
    @apply bg-black border border-gray-800;
  }

  .prose pre code {
    @apply bg-transparent text-gray-100;
  }

  .prose a {
    @apply text-blue-400 hover:text-blue-300;
  }
</style>
